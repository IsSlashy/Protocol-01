{
  "name": "@p01/ui",
  "version": "0.1.0",
  "description": "Protocol 01 Design System - Ultra dark theme with neon accents",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./colors": {
      "import": "./dist/colors.mjs",
      "require": "./dist/colors.js",
      "types": "./dist/colors.d.ts"
    },
    "./typography": {
      "import": "./dist/typography.mjs",
      "require": "./dist/typography.js",
      "types": "./dist/typography.d.ts"
    },
    "./spacing": {
      "import": "./dist/spacing.mjs",
      "require": "./dist/spacing.js",
      "types": "./dist/spacing.d.ts"
    },
    "./animations": {
      "import": "./dist/animations.mjs",
      "require": "./dist/animations.js",
      "types": "./dist/animations.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.72.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^3.0.0"
  },
  "keywords": [
    "protocol-01",
    "ui",
    "design-system",
    "react",
    "react-native",
    "dark-theme",
    "neon"
  ],
  "author": "Protocol 01",
  "license": "MIT"
}
